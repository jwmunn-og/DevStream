<div class="row">
  <div class="card small-12 large-10 large-offset-1 columns">
    <div class="row">
      <h2 class="small-12 columns"><%= @course.title %></h2>
      <%= image_tag @course.image %>
      <div class="small-12 large-4 columns text-center">
        <br />
        <span class="callout success">
          <%= number_to_currency @course.cost %>
        </span>
        <br class="clear" />
        <br />
        <% if current_user && current_user == @course.user %>
          <%= link_to 'Administer', instructor_course_path(@course), class: 'button alert' %>
        <% end %>
        <br /><br />
        <% if current_user && current_user.enrolled_in?(@course) %>
          <h3>You Are Enrolled!</h3>
        <% else %>
          <%= link_to 'Enroll', course_enrollments_path(@course), class: 'button', method: :post %>
        <% end %>
      </div>
      <div class="small-12 large-8 columns">
        <br />
        <%= @course.description %>
      </div>
      <div class="small-12 large-12 columns">
        <hr />
        <% @course.sections.each do |section| %>
          <br /><br />
          <div class="section">
              <h3><%= section.title %></h3>
              <div class="row">
                <% section.lessons.each do |lesson| %>
                    <div class="lesson text-center small-12 medium-6 columns">
                      <br />
                      <%= link_to lesson_path(lesson) do %>
                        <h4><%= lesson.title %></h4>
                        <br />
                        <p><%= lesson.subtitle %></p>
                      <% end %>
                    </div>
                <% end %>
              </div>
              <hr />
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
