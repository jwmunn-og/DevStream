<div id="course-title">
  <div class="row align-middle">
    <div class="small-12 large-10 large-offset-1 columns">
      <div class="row align-middle">
        <div class="small-12 columns">
          <h1>Learn about something today.</h1>
          <p class="lead">Enroll in a class and level up your development skills.</p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="small-12 large-10 large-offset-1 columns">
      <% @courses.each do |course| %>
      <div class="card">
        <div class="row">
          <div class="small-12 medium-4 columns">
            <%= image_tag course.image %>
          </div>
          <div class="small-12 medium-8 columns card-content">
            <h2><%= link_to course.title, course_path(course) %></h2>
            <p class="lead"><%= course.description %></p>
            <%= link_to 'More Details', course_path(course), class: 'button' %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>