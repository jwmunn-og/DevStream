<div class="row">
  <div class="card small-12 large-10 large-offset-1 columns">
   
    <h1>What I&rsquo;m Learning</h1>
    <% current_user.enrolled_courses.each do |course| %>
       <div class="row">
          <h2 class="small-12 columns"><%= link_to course.title, course_path(course) %></h2>
        </div>
        <div class="row">
          <%= image_tag course.image, class: 'columns' %>
        </div>
        <div class="row">
          <div class="small-12 large-8 columns">
            <%= course.description %>
          </div>
          <div class="small-12 large-4 columns">
            <%= link_to 'More Details', course_path(course), class: 'button' %>
          </div>
        </div>
        <hr />
    <% end %>

    <h1>What I&rsquo;m Teaching</h1>
    <% current_user.courses.each do |course| %>
      <div class="row">
          <h2 class="small-12 columns"><%= link_to course.title, course_path(course) %></h2>
        </div>
        <div class="row">
          <%= image_tag course.image, class: 'columns' %>
        </div>
        <div class="row">
          <div class="small-12 large-8 columns">
            <%= course.description %>
          </div>
          <div class="small-12 large-4 columns">
            <%= link_to 'More Details', course_path(course), class: 'button' %>
          </div>
        </div>
        <hr />
    <% end %>

  </div>
</div>