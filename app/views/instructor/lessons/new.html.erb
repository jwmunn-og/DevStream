<div class="row">
  <div class="card small-12 large-10 large-offset-1 columns">
    <h1>Add a new lesson</h1>
    <%= simple_form_for @lesson, url: instructor_section_lessons_path(current_section) do |f| %>
      <%= f.input :title %>
      <%= f.input :subtitle %>
      <br />
      <%= f.submit 'Add the lesson', class: 'button' %>
      <br />
    <% end %>
  </div>
</div>