<div class="row">
  <div class="card small-12 large-10 large-offset-1 columns">
    <h1>Add a new course</h1>
    <%= simple_form_for @course, url: instructor_courses_path do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :cost %>
      <%= f.input :image %>

      <%= f.submit 'Create', class: 'button' %>
    <% end %>
  </div>
</div>